            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@drawable/divider_line"
                android:showDividers="middle">

                <TableRow
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView android:text="滤波前-幅值      " />

                    <TextView
                        android:id="@+id/text_CH1_VMax"
                        android:gravity="center_horizontal"
                        android:hint="0" />

                    <TextView
                        android:gravity="right"
                        android:hint="V" />
                </TableRow>

                <TableRow
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView android:text="滤波前-频率         " />

                    <TextView

                        android:id="@+id/text_CH1_Freq"
                        android:gravity="center_horizontal"
                        android:hint="0" />

                    <TextView
                        android:gravity="right"
                        android:hint="Hz" />
                </TableRow>


            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@drawable/divider_line"
                android:orientation="vertical"
                android:showDividers="middle">

                <TableRow
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView android:text="滤波后-幅值      " />

                    <TextView
                        android:id="@+id/text_CH2_VMax"
                        android:gravity="center_horizontal"
                        android:hint="0" />

                    <TextView
                        android:gravity="right"
                        android:hint="V" />
                </TableRow>

                <TableRow
                    android:id="@+id/row4"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView android:text="滤波后-频率         " />

                    <TextView

                        android:id="@+id/text_CH2_Freq"
                        android:gravity="center_horizontal"
                        android:hint="0" />

                    <TextView
                        android:gravity="right"
                        android:hint="Hz" />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:divider="@drawable/divider_line"
                android:showDividers="middle">

                <TableRow
                    android:orientation="horizontal"
                    android:id="@+id/row5"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="当前已读取" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:id="@+id/text_has_trans"
                        android:text="0" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Byte" />
                </TableRow>

            </TableLayout>

