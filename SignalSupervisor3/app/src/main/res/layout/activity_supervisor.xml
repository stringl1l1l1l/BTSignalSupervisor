                <Button
                    android:id="@+id/btn_stop_trans"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="暂停\n读取" />


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">


                <Button
                    android:id="@+id/btn_show_ch1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="解析\n滤波前" />

                <Button
                    android:id="@+id/btn_show_ch2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="解析\n滤波后" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_clear_ch1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="清除滤波前" />

                <Button
                    android:id="@+id/btn_clear_ch2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="清除滤波后" />

                <Button
                    android:id="@+id/btn_clear_buffer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="清除缓冲区" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_draw"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="绘制幅频特性曲线" />

            </TableRow>

